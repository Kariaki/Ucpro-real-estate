<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/select_property_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/lato"
            android:gravity="center_horizontal"
            android:text="Select Property Type"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/property_type_edit_text"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/grey_background"
            android:focusable="true"
            android:fontFamily="@font/lato"
            android:gravity="center"
            android:inputType="text"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/select_property_text_view"
            app:layout_constraintStart_toStartOf="@id/select_property_text_view"
            app:layout_constraintTop_toBottomOf="@+id/select_property_text_view"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/arrow_left"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_baseline_arrow_left"
            app:layout_constraintEnd_toStartOf="@+id/property_type_edit_text"
            app:layout_constraintTop_toBottomOf="@id/select_property_text_view" />

        <ImageView
            android:id="@+id/arrow_right"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_baseline_arrow_right"
            android:visibility="visible"
            app:layout_constraintStart_toEndOf="@id/property_type_edit_text"
            app:layout_constraintTop_toBottomOf="@id/select_property_text_view" />

        <EditText
            android:id="@+id/add_location_edit_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/grey_background"
            android:drawableEnd="@drawable/ic_baseline_search"
            android:drawablePadding="5dp"
            android:fontFamily="@font/lato"
            android:hint="  ADD LOCATION"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/property_type_edit_text" />

        <LinearLayout
            android:id="@+id/room_config_and_pox_name_layout_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal"
            android:weightSum="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_location_edit_text"
            app:layout_constraintEnd_toEndOf="parent">


            <EditText
                android:id="@+id/room_config_edit_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="5"
                android:background="@drawable/grey_background"
                android:padding="7dp"
                android:fontFamily="@font/lato"
                android:layout_marginEnd="5dp"
                android:hint="  ROOM CONFIG"
                android:visibility="visible" />

            <EditText
                android:id="@+id/pox_name_edit_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="5"
                android:padding="7dp"
                android:background="@drawable/grey_background"
                android:fontFamily="@font/lato"
                android:hint="  POX NAME" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/deposit_and_flat_facing_layout_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="10"
            app:layout_constraintTop_toBottomOf="@+id/room_config_and_pox_name_layout_edit_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <EditText
                android:id="@+id/flat_facing_edit_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="7dp"
                android:layout_weight="5"
                android:layout_marginStart="10dp"
                android:background="@drawable/grey_background"
                android:fontFamily="@font/lato"
                android:hint="  FLAT FACING"/>

            <EditText
                android:id="@+id/deposit_inr_edit_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="5"
                android:layout_marginStart="10dp"
                android:padding="7dp"
                android:background="@drawable/grey_background"
                android:fontFamily="@font/lato"
                android:hint="  DEPOSIT INR" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/flat_area_and_rent_area_layout_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:weightSum="10"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/deposit_and_flat_facing_layout_edit_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <EditText
                android:id="@+id/flat_area_edit_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="5"
                android:padding="7dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/grey_background"
                android:fontFamily="@font/lato"
                android:hint="  FLAT AREA"/>

            <EditText
                android:id="@+id/rent_inr_edit_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="5"
                android:padding="7dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/grey_background"
                android:fontFamily="@font/lato"
                android:hint="  RENT INR" />

        </LinearLayout>


        <EditText
            android:id="@+id/add_images_edit_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10dp"
            android:padding="7dp"
            android:background="@drawable/grey_background"
            android:fontFamily="@font/lato"
            android:hint="  ADD IMAGES"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.542"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/flat_area_and_rent_area_layout_edit_text" />

        <EditText
            android:id="@+id/contact_number_edit_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10dp"
            android:padding="7dp"
            android:background="@drawable/grey_background"
            android:fontFamily="@font/lato"
            android:hint="  CONTACT NUMBER"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.542"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_images_edit_text" />


        <Button
            android:id="@+id/preview_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/lato"
            android:text="PREVIEW"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/contact_number_edit_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>