<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFE3FF" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:gravity="center"
            android:orientation="vertical">


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/circular_image_view"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
                app:srcCompat="@drawable/globe" />


            <ImageView
                android:id="@+id/ucpox_text_view"
                android:layout_width="183dp"
                android:layout_height="85dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ucpox" />


            <TextView
                android:id="@+id/tagline_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:text="@string/tagline"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/sign_in_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/lato"
                android:text="@string/sign_in"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/google_logo_image_view"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_height="60dp"
                android:layout_marginVertical="50dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/circle_view_title"
                android:background="@drawable/button_background">


                <ImageView
                    android:layout_width="80dp"
                    android:padding="10dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/google_logo"  />

                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:paddingRight="30dp"
                    android:textStyle="bold"
                    android:layout_height="match_parent"
                    android:textColor="@color/teal_200"
                    android:textColorHint="@color/teal_200"
                    android:hint="Signin with Google" />


            </LinearLayout>

            <Button
                android:id="@+id/btn_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/teal_200"
                android:padding="10dp"
                android:text="@string/login"
                android:textColor="@color/white"
                android:textStyle="bold" />


        </LinearLayout>


    </ScrollView>


</RelativeLayout>