<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapActivity">

    <com.mapbox.mapboxsdk.maps.MapView xmlns:mapbox="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        mapbox:mapbox_cameraZoom="3.5" />



    <LinearLayout
        android:id="@+id/search_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <ImageView android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="@drawable/button_background"
            android:backgroundTint="@color/teal_200"
            android:src="@drawable/ucpox" />


        <LinearLayout
            android:id="@+id/btnStart"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:background="@drawable/button_background">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:hint="Enter city/Locality"
                android:textColor="@color/teal_200"
                android:textColorHint="@color/teal_200"
                android:textSize="@dimen/text_size" />

            <ImageView
                android:layout_width="40dp"
                android:padding="5dp"
                android:layout_height="match_parent"
                app:tint="@color/teal_200"
                android:src="@drawable/ic_baseline_search"  />


        </LinearLayout>


        <ImageView
            android:layout_width="40dp"
            android:background="@drawable/button_background"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            app:tint="@color/teal_200"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_filter_alt_24" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/menu_layout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/search_layout"
        android:layout_marginHorizontal="10dp"
        android:padding="2dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/flat_img"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:background="@drawable/button_background">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="match_parent"
                app:tint="@color/teal_200"
                android:layout_marginRight="7dp"
                android:src="@drawable/flat_icon"  />

            <TextView
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/text_size"
                android:layout_height="match_parent"
                android:textColor="@color/teal_200"
                android:text="Flat" />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/plot_img"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:background="@drawable/button_background">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:layout_marginRight="7dp"
                android:src="@drawable/plot_icon"  />

            <TextView
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/text_size"
                android:layout_height="match_parent"
                android:textColor="@color/teal_200"
                android:text="Plot" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/estab_img"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:background="@drawable/button_background">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:tint="@color/teal_200"
                android:layout_marginRight="7dp"
                android:src="@drawable/estab_icon"  />

            <TextView
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/text_size"
                android:textColor="@color/teal_200"
                android:layout_height="match_parent"
                android:text="Estab" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/add_pox"
            android:layout_weight="1"
            android:layout_width="400dp"
            android:layout_marginHorizontal="5dp"
            android:gravity="center"
            android:onClick="goingToAddPoxLocation"
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:background="@drawable/button_background">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:tint="@color/teal_200"
                android:src="@drawable/ic_baseline_add_circle_24"  />

            <TextView
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/text_size"
                android:layout_marginLeft="2dp"
                android:textColor="@color/teal_200"
                android:layout_height="match_parent"
                android:text="Add Pox" />

        </LinearLayout>



    </LinearLayout>



    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/live_location"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/button_background"
            app:tint="@color/teal_200"
            android:layout_marginHorizontal="5dp"
            android:padding="5dp"
            android:src="@drawable/mapbox_plugins_ic_user_location" />


        <ImageView
            android:id="@+id/personImg"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="5dp"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_account_circle_24"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            app:tint="@color/teal_200"
            android:background="@drawable/button_background" />

    </LinearLayout>



</RelativeLayout>